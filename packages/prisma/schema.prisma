generator client {
  provider = "prisma-client"
  output   = "../src/database/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String

  @@map("users")
}

model Customer {
  id Int @id @default(autoincrement())
  phone String @unique
  bonuses Decimal @db.Decimal(65, 2) @default(0)
  totalSum Decimal @db.Decimal(65, 2) @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("customers")
}

model AppConfig {
  id Int @id @default(autoincrement())
  key String @unique
  value Json

  @@map("app_config")
}