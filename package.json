{
  "name": "discount-system",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "dotenv -e .env -- pnpm run --filter=\"./apps/**\" dev",
    "test": "dotenv -e .env -- pnpm run --filter=\"./apps/**\" test",
    "type-check": "pnpm -r run type-check",
    "build": "dotenv -e .env -- pnpm -r run --parallel build",
    "start": "dotenv -e .env -- pnpm run --filter=\"./apps/server\" start",
    "clean": "pnpm -r exec rimraf dist",
    "db:migrate": "dotenv -e .env -- pnpm --filter=\"./packages/db\" exec drizzle-kit migrate",
    "db:seed:base": "dotenv -e .env -- pnpm run --filter=\"./packages/db\" db:seed:base",
    "db:seed:dev": "dotenv -e .env -- pnpm run --filter=\"./packages/db\" db:seed:dev"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.23.0",
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rimraf": "^6.1.2"
  }
}
